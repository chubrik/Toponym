{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "npm",
  "problemMatcher": "$tsc",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "args": [
        "run-script",
        "build"
      ],
      "group": {
        "_id": "build",
        "isDefault": false
      }
    },
    {
      "label": "TSLint",
      "type": "shell",
      "args": [
        "run-script",
        "tslint"
      ]
    },
    {
      "label": "Run & Watch",
      "type": "shell",
      "args": [
        "run-script",
        "start"
      ]
    },
    {
      "label": "Clean",
      "type": "shell",
      "args": [
        "run-script",
        "clean"
      ]
    }
  ]
}
